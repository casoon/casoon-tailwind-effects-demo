---
export interface Props { id: string; title: string; description?: string }
const { id, title, description } = Astro.props;
---
<section id={id} class="section">
  <h2 class="doc-h2">
    <a href={`#${id}`} class="anchor" aria-label={title}>#</a>
    {title}
  </h2>
  {description && <p class="muted" style="margin:-.25rem 0 1rem">{description}</p>}
  <slot />
  <style is:global>
    .doc-h2{display:flex;align-items:center;gap:.5rem;margin:0 0 .5rem}
    .anchor{display:inline-flex;align-items:center;justify-content:center;width:1.55rem;height:1.55rem;border-radius:6px;text-decoration:none;color:var(--docs-muted);border:1px solid transparent}
    .anchor:hover{color:var(--docs-text);border-color:var(--docs-border)}
  </style>
</section>

