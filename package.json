{
  "name": "casoon-tailwindcss-effects-demo",
  "version": "0.1.0-alpha.1",
  "description": "A modern demo website showcasing the @casoon/tailwindcss-effects CSS library with Astro and Tailwind CSS v4",
  "type": "module",
  "private": true,
  "keywords": [
    "css-effects",
    "glassmorphism",
    "tailwindcss",
    "astro",
    "demo",
    "ui-components",
    "css-library"
  ],
  "author": "Casoon Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/casoon/tailwindcss-effects-demo.git"
  },
  "bugs": {
    "url": "https://github.com/casoon/tailwindcss-effects-demo/issues"
  },
  "homepage": "https://github.com/casoon/tailwindcss-effects-demo#readme",
  "scripts": {
    "dev": "node scripts/prebuild-effects.mjs && astro dev",
    "build": "node scripts/prebuild-effects.mjs && astro build",
    "preview": "astro preview",
    "clean": "rm -rf dist",
    "docs:dev": "astro dev --open /docs",
    "docs:check": "astro build && node scripts/docs-verify.mjs",
    "docs:verify": "node scripts/docs-verify.mjs",
    "perf:check": "node scripts/lighthouse.mjs",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:update": "playwright test --update-snapshots"
  },
  "dependencies": {
    "@casoon/tailwindcss-effects": "^0.4.7",
    "@tailwindcss/vite": "^4.1.11",
    "astro": "^5.13.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "chrome-launcher": "^1.1.0",
    "lighthouse": "^12.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
